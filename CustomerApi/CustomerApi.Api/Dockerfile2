FROM mcr.microsoft.com/dotnet/aspnet:5.0-focal AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0-focal AS build
WORKDIR /src
COPY ["CustomerApi/CustomerApi.Api/CustomerApi.Api.csproj", "CustomerApi.Api/"]
COPY ["CustomerApi/CustomerApi.Data/CustomerApi.Data.csproj", "CustomerApi.Data/"]
COPY ["CustomerApi/CustomerApi.Domain/CustomerApi.Domain.csproj", "CustomerApi.Domain/"]
COPY ["CustomerApi/CustomerApi.Service/CustomerApi.Services.csproj", "CustomerApi.Services/"]
COPY ["CustomerApi/CustomerApi.EventBus/CustomerApi.EventBus.csproj", "CustomerApi.EventBus/"]
COPY ["*.props", "./"]

RUN dotnet restore "CustomerApi/CustomerApi.Api/CustomerApi.Api.csproj"
COPY . .

RUN dotnet build "CustomerApi/CustomerApi.Api/CustomerApi.Api.csproj" -c Release -o /app/build --no-restore

FROM build AS publish
RUN dotnet publish "CustomerApi/CustomerApi.Api/CustomerApi.Api.csproj" --no-restore -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "CustomerApi.Api.dll"]